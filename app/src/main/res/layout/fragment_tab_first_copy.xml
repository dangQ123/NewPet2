<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/first1"
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/headpic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="早上好，西尼亚">

            </TextView>


        </LinearLayout>

        <ImageView
            android:layout_width="252dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:src="@drawable/sleeppic">

        </ImageView>

    </LinearLayout>

    <ImageView
        android:id="@+id/first2"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/first1"
        android:src="@drawable/mulpics"
        android:layout_width="351dp"
        android:layout_height="174dp">

    </ImageView>

    <FrameLayout

        android:layout_marginTop="15dp"
        android:layout_below="@id/first2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <FrameLayout
            android:id="@+id/framelayout5"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/myLinearLayout52"
                android:orientation="vertical"
                android:background="@drawable/drawer5bac"
                android:layout_gravity="center_horizontal"
                android:layout_width="370dp"
                android:layout_height="540dp">

                <TextView
                    android:id="@+id/lianjie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="25dp"
                    android:text="连接"
                    android:textColor="#ffFFFFFF"
                    android:textFontWeight="500"
                    android:textSize="24sp"></TextView>

                <Button
                    android:layout_marginRight="40dp"
                    android:textColor="@color/white"
                    android:text="连接"
                    android:layout_gravity="right"
                    android:background="@drawable/xiaodubac"
                    android:layout_width="57dp"
                    android:layout_height="34dp">

                </Button>
                
                <ImageView
                    android:layout_marginTop="11dp"
                    android:layout_gravity="center"
                    android:src="@drawable/lianjiealiance"
                    android:layout_width="246dp"
                    android:layout_height="249dp">

                </ImageView>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/myLinearLayout51"
                android:orientation="vertical"
                android:background="@drawable/drawer5bacmul"
                android:layout_gravity="center_horizontal"
                android:layout_width="370dp"
                android:layout_height="540dp">

            </LinearLayout>
        </FrameLayout>
    </FrameLayout>

</RelativeLayout>