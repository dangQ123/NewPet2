<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".HomePageActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioGroup
            android:background="@drawable/bottombarbacpic"
            android:layout_centerInParent="true"
            android:id="@+id/rg_tabbar"
            android:layout_width="390dp"
            android:layout_height="80dp"
            android:paddingBottom="25dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_1"
                style="@style/TabButton"
                android:checked="true"
                android:drawableBottom="@drawable/tab_first_selector" >
            </RadioButton>

            <RadioButton
                android:id="@+id/rb_2"
                style="@style/TabButton"
                android:drawableBottom="@drawable/tab_second_selector" />

            <RadioButton
                android:id="@+id/rb_3"
                style="@style/TabButton"
                android:drawableBottom="@drawable/tab_third_selector" />

        </RadioGroup>
    </RelativeLayout>

</LinearLayout>