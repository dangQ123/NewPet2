<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/first1"
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/headpic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="早上好，西尼亚">

            </TextView>


        </LinearLayout>

        <ImageView
            android:layout_width="252dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:src="@drawable/sleeppic">

        </ImageView>

    </LinearLayout>

    <ImageView
        android:id="@+id/first2"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/first1"
        android:src="@drawable/mulpics"
        android:layout_width="351dp"
        android:layout_height="174dp">

    </ImageView>

    <FrameLayout

        android:layout_marginTop="15dp"
        android:layout_below="@id/first2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/framelayout1"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/myLinearLayout12"
                android:orientation="vertical"
                android:background="@drawable/drawer1bac"
                android:layout_gravity="center_horizontal"
                android:layout_width="370dp"
                android:layout_height="540dp">

                <TextView
                    android:textColor="#ffFFFFFF"
                    android:textSize="24sp"
                    android:textFontWeight="500"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="50dp"
                    android:text="电源"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

                <RelativeLayout
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/drawer1icon1"
                        android:src="@drawable/drawer1icon1"
                        android:layout_width="35dp"
                        android:layout_height="35dp">

                    </ImageView>
                    <TextView
                        android:layout_marginLeft="19dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/drawer1icon1"
                        android:textColor="#ffFFFFFF"
                        android:textSize="18sp"
                        android:layout_gravity="center_vertical"
                        android:text="开机"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>
                    <com.suke.widget.SwitchButton
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </com.suke.widget.SwitchButton>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/drawer1icon2"
                        android:src="@drawable/drawer1icon2"
                        android:layout_width="35dp"
                        android:layout_height="35dp">

                    </ImageView>
                    <TextView
                        android:layout_marginLeft="19dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/drawer1icon2"
                        android:textColor="#ffFFFFFF"
                        android:textSize="18sp"
                        android:layout_gravity="center_vertical"
                        android:text="待机"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>
                    <com.suke.widget.SwitchButton
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </com.suke.widget.SwitchButton>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/drawer1icon3"
                        android:src="@drawable/drawer1icon3"
                        android:layout_width="35dp"
                        android:layout_height="35dp">

                    </ImageView>

                    <ImageView
                        android:src="@drawable/chongqibutton"
                        android:layout_alignParentRight="true"
                        android:layout_width="57dp"
                        android:layout_height="34dp">

                    </ImageView>

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/myLinearLayout11"
                android:orientation="vertical"
                android:background="@drawable/drawer1bacmul"
                android:layout_gravity="center_horizontal"
                android:layout_width="370dp"
                android:layout_height="540dp">

            </LinearLayout>
        </FrameLayout>
        <FrameLayout
            android:layout_marginTop="75dp"
            android:id="@+id/framelayout2"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/myLinearLayout22"
                android:orientation="vertical"
                android:background="@drawable/drawer2bac"
                android:layout_gravity="center_horizontal"
                android:layout_width="370dp"
                android:layout_height="540dp">

                <TextView
                    android:textColor="#ffFFFFFF"
                    android:textSize="24sp"
                    android:textFontWeight="500"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="50dp"
                    android:text="灯光"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>

                <RelativeLayout
                    android:layout_gravity="center_horizontal"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/small_light"
                        android:layout_width="24dp"
                        android:layout_height="24dp">

                    </ImageView>
                    
                    <SeekBar
                        android:layout_centerHorizontal="true"
                        android:splitTrack="false"
                        android:progress="50"
                        android:minHeight="2dp"
                        android:maxHeight="2dp"
                        android:progressDrawable="@drawable/sb_style"
                        android:layout_width="250dp"
                        android:thumb="@drawable/selector_thumb_bar"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/big_light"
                        android:layout_width="24dp"
                        android:layout_height="24dp">

                    </ImageView>

                </RelativeLayout>
                <ImageView
                    android:layout_marginLeft="260dp"
                    android:src="@drawable/lightswitch"
                    android:layout_width="73dp"
                    android:layout_height="73dp">

                </ImageView>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/myLinearLayout21"
                android:orientation="vertical"
                android:background="@drawable/drawer2bacmul"
                android:layout_gravity="center_horizontal"
                android:layout_width="370dp"
                android:layout_height="540dp">

            </LinearLayout>
        </FrameLayout>
        <FrameLayout
            android:layout_marginTop="150dp"
            android:id="@+id/framelayout3"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/myLinearLayout32"
                android:orientation="vertical"
                android:background="@drawable/drawer3bac"
                android:layout_gravity="center_horizontal"
                android:layout_width="370dp"
                android:layout_height="540dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="290dp">

                    <TextView
                        android:id="@+id/tiaojie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="25dp"
                        android:text="调节"
                        android:textColor="#ffFFFFFF"
                        android:textFontWeight="500"
                        android:textSize="24sp"></TextView>

                    <RelativeLayout
                        android:layout_width="100dp"
                        android:layout_height="35dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="25dp"
                        android:layout_marginRight="40dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/hoticon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/hot_notpress">

                        </ImageView>

                        <ImageView
                            android:id="@+id/coldicon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/cold_press">

                        </ImageView>

                    </RelativeLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tiaojie">

                        <ImageView
                            android:id="@+id/temppic"
                            android:layout_width="wrap_content"
                            android:layout_height="250dp"
                            android:src="@drawable/coldpic">

                        </ImageView>

                    </FrameLayout>

                </RelativeLayout>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/myLinearLayout31"
                android:orientation="vertical"
                android:background="@drawable/drawer3bacmul"
                android:layout_gravity="center_horizontal"
                android:layout_width="370dp"
                android:layout_height="540dp">

            </LinearLayout>
        </FrameLayout>
        <FrameLayout
            android:layout_marginTop="225dp"
            android:id="@+id/framelayout4"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/myLinearLayout42"
                android:orientation="vertical"
                android:background="@drawable/drawer4bac"
                android:layout_gravity="center_horizontal"
                android:layout_width="370dp"
                android:layout_height="540dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/xiaodu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="25dp"
                        android:text="消毒"
                        android:textColor="#ffFFFFFF"
                        android:textFontWeight="500"
                        android:textSize="24sp">
                    </TextView>

                    <ImageView
                        android:src="@drawable/uv"
                        android:layout_marginRight="50dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="25dp"
                        android:layout_width="35dp"
                        android:layout_height="35dp">

                    </ImageView>

                </RelativeLayout>

                <LinearLayout
                    android:layout_marginTop="27dp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/xiaodubac"
                    android:layout_width="293dp"
                    android:layout_height="44dp">

                    <TextView
                        android:layout_marginLeft="22dp"
                        android:id="@+id/shezhi"
                        android:text="设置"
                        android:textColor="@color/white"
                        android:layout_width="35dp"
                        android:layout_height="21dp">

                    </TextView>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/tenmin"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:layout_width="27dp"
                            android:layout_height="27dp">

                        </ImageView>
                        <TextView
                            android:id="@+id/text1"
                            android:layout_gravity="center"
                            android:textColor="@color/white"
                            android:text="10"
                            android:layout_height="match_parent"
                            android:layout_width="wrap_content">
                        </TextView>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/fifteenmin"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:layout_width="27dp"
                            android:layout_height="27dp">

                        </ImageView>
                        <TextView
                            android:id="@+id/text2"
                            android:layout_gravity="center"
                            android:textColor="@color/white"
                            android:text="15"
                            android:layout_height="match_parent"
                            android:layout_width="wrap_content">
                        </TextView>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/twentymin"
                            android:layout_gravity="center"
                            android:background="@drawable/chosebac"
                            android:layout_width="27dp"
                            android:layout_height="27dp">

                        </ImageView>
                        <TextView
                            android:id="@+id/text3"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:text="20"
                            android:layout_height="match_parent"
                            android:layout_width="wrap_content">
                        </TextView>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/thirtymin"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:layout_width="27dp"
                            android:layout_height="27dp">

                        </ImageView>
                        <TextView
                            android:id="@+id/text4"
                            android:layout_gravity="center"
                            android:textColor="@color/white"
                            android:text="30"
                            android:layout_height="match_parent"
                            android:layout_width="wrap_content">
                        </TextView>
                    </FrameLayout>

                    <TextView
                        android:textColor="@color/white"
                        android:text="min"
                        android:layout_marginRight="10dp"
                        android:layout_width="28dp"
                        android:layout_height="wrap_content">

                    </TextView>

                </LinearLayout>

                <RelativeLayout
                    android:layout_marginTop="37dp"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/xiaodubac"
                    android:layout_width="293dp"
                    android:layout_height="44dp">

                    <TextView
                        android:layout_centerInParent="true"
                        android:text="开始消毒"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                </RelativeLayout>

                <TextView
                    android:textColor="@color/white"
                    android:layout_marginTop="32dp"
                    android:layout_gravity="center"
                    android:text="上次消毒2小时前"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>



            </LinearLayout>


            <LinearLayout
                android:id="@+id/myLinearLayout41"
                android:orientation="vertical"
                android:background="@drawable/drawer4bacmul"
                android:layout_gravity="center_horizontal"
                android:layout_width="370dp"
                android:layout_height="540dp">

            </LinearLayout>


        </FrameLayout>

        <FrameLayout
            android:layout_marginTop="295dp"
            android:id="@+id/framelayout5"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/myLinearLayout52"
                android:orientation="vertical"
                android:background="@drawable/drawer5bac"
                android:layout_gravity="center_horizontal"
                android:layout_width="370dp"
                android:layout_height="540dp">

                <TextView
                    android:id="@+id/lianjie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="25dp"
                    android:text="连接"
                    android:textColor="#ffFFFFFF"
                    android:textFontWeight="500"
                    android:textSize="24sp"></TextView>

                <Button
                    android:layout_marginRight="40dp"
                    android:textColor="@color/white"
                    android:text="连接"
                    android:layout_gravity="right"
                    android:background="@drawable/xiaodubac"
                    android:layout_width="57dp"
                    android:layout_height="34dp">

                </Button>

                <ImageView
                    android:layout_marginTop="11dp"
                    android:layout_gravity="center"
                    android:src="@drawable/lianjiealiance"
                    android:layout_width="246dp"
                    android:layout_height="249dp">

                </ImageView>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/myLinearLayout51"
                android:orientation="vertical"
                android:background="@drawable/drawer5bacmul"
                android:layout_gravity="center_horizontal"
                android:layout_width="370dp"
                android:layout_height="540dp">

            </LinearLayout>
        </FrameLayout>
    </FrameLayout>

</RelativeLayout>